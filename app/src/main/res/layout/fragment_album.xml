<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/albumIte"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/album_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:contentDescription="@string/albums"
        android:scaleType="fitCenter"
        tools:srcCompat="@drawable/common_ground" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/linear_height"
        android:layout_alignParentBottom="true"
        android:background="@color/lightPrimaryColor"
        android:orientation="vertical"
        android:padding="@dimen/padding_16dp">

        <TextView
            android:id="@+id/albumName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="@dimen/frag_album_text_size1"
            tools:text="Common Ground" />

        <TextView
            android:id="@+id/artistName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/albumTextView_2_color"
            android:textSize="@dimen/frag_album_text_size2"
            tools:text="Above &amp; Beyond" />
    </LinearLayout>
</RelativeLayout>