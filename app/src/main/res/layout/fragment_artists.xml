<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightPrimaryDark">

    <ImageView
        android:id="@+id/artist_img"
        android:layout_width="@dimen/artist_img_width"
        android:layout_height="@dimen/artist_img_height"
        android:layout_marginLeft="@dimen/margin_16dp"
        android:layout_marginStart="@dimen/margin_16dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/artist_image"
        android:scaleType="fitCenter"
        android:src="@drawable/above_and_beyond" />

    <TextView
        android:id="@+id/artist_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_16dp"
        android:layout_marginLeft="@dimen/margin_16dp"
        android:layout_marginStart="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_24dp"
        android:layout_toEndOf="@+id/artist_img"
        android:layout_toRightOf="@+id/artist_img"
        android:textColor="@color/white"
        android:textSize="@dimen/frag_artist_text_size"
        tools:text="Above &amp; Beyond" />
</RelativeLayout>